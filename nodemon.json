{
    "watch": [
        "src",
        "./*.json",
        "./*.ts",
        "tests"
    ],
    "ext": "ts,json",
    "ignore": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "tests/*",
        "node_modules"
    ],
    "exec": "yarn lint && tsc --incremental && node --inspect=0.0.0.0:9229 ./dist/index.js || exit 1"
}